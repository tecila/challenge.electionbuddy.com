<p id="notice"><%= notice %></p>

<h1><%= "Audits from #{@resource.name}" %></h1>

<% if @audits.empty? %>
<h2> No changes yet </h2>

<%else%>
<table>
  <thead>
    <tr>
      <th>Changed by</th>
      <th>Modifications</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each do |audit| %>
    <tr>
      <td><%= audit.user.email %></td>
      <td><%= audit.modifications %></td>
      <td><%= audit.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>

<%= link_to 'Log out', destroy_user_session_path, method: :delete %>